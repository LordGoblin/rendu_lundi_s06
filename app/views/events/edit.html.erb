<h1>edit <%= @event.title  %></h1>

<%= form_for @event do |f| %>

	<div class="form-group">
		<label>titre de l'event</label>
		<%= f.text_field :title, class: 'form-control' %>
	</div>
	<div class="form-group">
		<label>description de l'event</label>
		<%= f.text_area :description, class: 'form-control' %>
	</div>
	<div class="form-group">
		<label>start_date de l'event</label>
		<%= date_field_tag 'start_date', @start_date, class: "form-control "  %>
	</div>
	<div class="form-group">
		<label>duration de l'event</label>
		<%= f.text_area :duration, class: 'form-control' %>
	</div>
	<div class="form-group">
		<label>price de l'event</label>
		<%= f.text_area :price, class: 'form-control' %>
	</div>
	<div class="form-group">
		<label>location de l'event</label>
		<%= f.text_area :location, class: 'form-control' %>
	</div>
	<div class="form-group">
		<button type="submit" class="btn btn-primary">modifier event</button>
	</div>

<% end %>